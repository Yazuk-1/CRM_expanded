@model RealEstateCRM.ViewModels.EditUserRolesViewModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<h1>Edit Roles for @Model.Email</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Assigned?</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>@Model.Roles[i].RoleName</td>
                    <td>
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
